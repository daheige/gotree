//TestCache
type Course struct {
	dao.DaoCache //或继承再次封装的CacheBase
	Id           string
	Exp          int64
}

func init() {
	dao.RegisterCache(new(Course).Gotree())
}

//Course
func (self *Course) Gotree() *Course {
	self.DaoCache.Gotree(self)
	return self
}

//Dao
func (self *Course) Dao() string {
	return "Feature"
}

func (self *Course) TestSet(i int, s string) {
	var data struct {
		CourseInt    int
		CourseString string
	}
	data.CourseInt = i
	data.CourseString = s
	byteData, _ := json.Marshal(data)
	self.Do("SET", "Feature", string(byteData))
}

func (self *Course) TestGet() (result struct {
	CourseInt    int
	CourseString string
}, exists bool) {

	strData, err := redis.Bytes(self.Do("GET", "Feature"))
	if err != nil {
		return
	}
	json.Unmarshal(strData, &result)
	return
}
