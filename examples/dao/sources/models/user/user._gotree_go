package user

import (
	"errors"

	"github.com/8treenet/gotree/dao"
	"github.com/8treenet/gotree/helper"
	"github.com/astaxie/beego/orm"
)

// User
type User struct {
	dao.ComModel
}

func init() {
	dao.RegisterModel(new(User).Gotree())
}

// Gotree
func (self *User) Gotree() *User {
	self.ComModel.ComModel(self)
	return self
}

// Com
func (self *User) Com() string {
	return "User"
}

// Add 注册用户
func (self *User) Add(uname string, money int64) (uid int64, e error) {
	result, e := self.Conn().Raw("INSERT INTO `user` (`name`, `money`, `camelCase`, `under_score_case`) VALUES (?, ?, 'hello', 'hello')", uname, money).Exec()
	if e != nil {
		return
	}
	uid, e = result.LastInsertId()
	return
}

// AddMoney 增加钱
func (self *User) AddMoney(uid int64, money int64) (e error) {
	result, e := self.Conn().Raw("UPDATE `user` SET `money` =  `money` + ? WHERE `id` = ?", money, uid).Exec()
	if e != nil {
		return
	}
	if affected, _ := result.RowsAffected(); affected == 0 {
		e = errors.New("uid error")
	}
	return
}

// Users 用户列表  反射表字段 Lowercase|camelCase|under_score_case
func (self *User) Get(uid int64) (result struct {
	Id             int64
	Name           string
	Money          int64
	CamelCase      string
	UnderScoreCase string
}, e error) {
	e = self.Conn().Raw("SELECT id,name,money,camelCase,under_score_case FROM `user` where id = ?", uid).QueryRow(&result)
	if e == orm.ErrNoRows {
		helper.Log().WriteInfo("ErrNoRows")
	}
	return
}
